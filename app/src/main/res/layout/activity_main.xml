            android:layout_margin="3dp"
            android:background="@drawable/text_view_border"
            android:textColor="#fff"
            android:text="One,Four"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"></TextView>

    </LinearLayout>

